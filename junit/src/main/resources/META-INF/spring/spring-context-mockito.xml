<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userController" class="com.csu.mockito.domain.UserController"/>
    <bean id="userService" class="com.csu.mockito.domain.UserService"/>
    <bean id="userDao" class="com.csu.mockito.domain.UserDao"/>

    <bean id="userProxyFactory" class="org.springframework.aop.framework.ProxyFactory">
        <property name="target" ref="userService"/>
    </bean>

    <bean id="userServiceProxy" factory-bean="userProxyFactory" factory-method="getProxy"/>
</beans>